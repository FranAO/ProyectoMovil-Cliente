<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/modern_gradient_bg"
    tools:context=".Register">

    <View
        android:id="@+id/circle1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:alpha="0.1"
        android:background="@drawable/floating_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp" />

    <View
        android:id="@+id/circle2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:alpha="0.08"
        android:background="@drawable/floating_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-75dp"
        android:layout_marginStart="-75dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/glassmorphismCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#40FFFFFF"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:background="@drawable/glass_background">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp">

                <View
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:alpha="0.2"
                    android:background="@drawable/logo_shadow" />

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#FFFFFD"
                    app:cardCornerRadius="55dp"
                    app:cardElevation="12dp">

                    <ImageView
                        android:id="@+id/logoImageView"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:contentDescription="Logo Universidad del Valle"
                        android:scaleType="centerInside"
                        android:src="@drawable/logo" />

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="28dp"
                android:fontFamily="sans-serif-light"
                android:text="Crear Cuenta"
                android:textColor="#8D0743"
                android:textSize="26sp"
                android:textStyle="normal"
                android:letterSpacing="0.05" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_field_bg"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/correo"
                        android:scaleType="centerInside"
                        app:tint="#8D0743" />

                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Correo Electrónico"
                        android:inputType="textEmailAddress"
                        android:textColor="#8D0743"
                        android:textColorHint="#9CADBA"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_field_bg"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/bloquear"
                        android:scaleType="centerInside"
                        app:tint="#8D0743" />

                    <EditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:textColor="#8D0743"
                        android:textColorHint="#9CADBA"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                    <ImageView
                        android:id="@+id/togglePasswordVisibility"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ojo"
                        android:scaleType="centerInside"
                        android:padding="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        app:tint="#9CADBA" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/input_field_bg"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/bloquear"
                        android:scaleType="centerInside"
                        app:tint="#8D0743" />

                    <EditText
                        android:id="@+id/confirmPasswordEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Confirmar Contraseña"
                        android:inputType="textPassword"
                        android:textColor="#8D0743"
                        android:textColorHint="#9CADBA"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                    <ImageView
                        android:id="@+id/toggleConfirmPasswordVisibility"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ojo"
                        android:scaleType="centerInside"
                        android:padding="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        app:tint="#9CADBA" />

                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp"
                android:backgroundTint="@android:color/transparent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/premium_button_bg"
                    android:elevation="0dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="REGISTRARSE"
                    android:textColor="#FFFFFD"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    app:backgroundTint="@null"
                    app:cornerRadius="25dp"
                    app:rippleColor="#40FFFFFF" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#30000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="o"
                    android:textColor="#9CADBA"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#30000000" />

            </LinearLayout>

            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_button_ripple"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:padding="12dp"
                android:text="¿Ya tiene una cuenta?"
                android:textColor="#8D0743"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>